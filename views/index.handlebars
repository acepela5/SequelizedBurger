<div class="background">
    <div class="transbox">

        <div class="container">





            <div class="row">
                <div class="col-lg-12 text-center">

                    <h1>Burgers Burgers Burgers!</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    <h2>Burgers You Can Order</h2>

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <li>
                            {{this.burger_name}}
                            <button class="devouredTrue" type="button" data-id="{{this.id}}">EAT IT</button>

                        </li>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>

                <div class="col-lg-4"></div>

                <div class="col-lg-4">
                    <h2>Burgers Devoured</h2>
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <li>{{this.burger_name}}</li>

                        {{/if}}
                        {{/each}}
                    </ul>

                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 text-center"></div>
            </div>

            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Add A Burger</h2>

                    <form class="create-form">
                        <div class="form-group">
                            <input type="text" id="burgerNameInput" name="name">
                        </div>


                        <button id="addburger" type="submit">Add A Burger</button>
                    </form>
                </div>
            </div>
        </div>


    </div>
</div>